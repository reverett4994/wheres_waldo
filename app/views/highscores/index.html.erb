<div class="container">
  <h2>High Scores</h2>
  <p>This is all the scores listed best to worst according to time taken:</p>
  <table class="table">
    <thead>
      <tr>
        <th>Rank</th>
        <th>User</th>
        <th>Time (seconds)</th>
      </tr>
    </thead>
    <tbody>
      <% @highscores.each do |highscore| %>
        <tr>
          <td><%=@counter%></td>
          <td><%=highscore.user%></td>
          <td><%=highscore.score%></td>
        </tr>
        <%@counter+=1%>
      <%end%>
    </tbody>
  </table>
</div>
